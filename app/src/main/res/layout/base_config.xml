<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="325dp"
    android:layout_height="250dp"
    android:orientation="vertical"
    android:padding="12dip" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textViewMaximumnumberofrecord"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/maximumnumberofrecord" />

        <EditText
            android:id="@+id/editTextMaximumnumberofrecord"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:inputType="numberSigned" >

        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textViewNumberoffingerperrecord"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/numberoffingerperrecord" />

        <EditText
            android:id="@+id/editTextNumberoffingerperrecord"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:inputType="numberSigned" >

        </EditText>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textEncryptDatabase"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/encryptDatabase" />

        <RadioGroup
            android:id="@+id/radioEncryptDatabase"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2" 
            android:orientation="horizontal">
        	
	        <RadioButton
	            android:id="@+id/radioButtonencryptDatabaseNo"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:checked="true"
	            android:text="@string/no" />
	
	        <RadioButton
	            android:id="@+id/radioButtonencryptDatabaseYes"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="@string/yes" />
		</RadioGroup>

    </LinearLayout>

</LinearLayout>