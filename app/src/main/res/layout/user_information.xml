<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:padding="5dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="33"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/idnumberlabelUI"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/idnumber" />

            <EditText
                android:id="@+id/idnumberUI"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/idnumber"
                android:inputType="text"
                android:nextFocusDown="@+id/firstnameUI" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="33"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/firstnamelabelUI"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/firstname" />

            <EditText
                android:id="@+id/firstnameUI"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/firstname"
                android:inputType="text"
                android:nextFocusDown="@+id/lastnameUI" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="33"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/lastnamelabelUI"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/firstnamelabelUI"
                android:text="@string/lastname" />

            <EditText
                android:id="@+id/lastnameUI"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/lastname"
                android:inputType="text" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>