<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dip" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/textuserAreaData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="@string/userAreaData"
            android:textSize="@dimen/font_medium"
            android:textStyle="bold" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/radioUserAreaData"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RadioButton
            android:id="@+id/radioReadUserAreaData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ReadUserAreaData"
            android:checked="true"/>
        
        <RadioButton
            android:id="@+id/radioWriteUserAreaData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/WriteUserAreaData"/>
        
        <RadioButton
            android:id="@+id/radioRemoveUserAreaData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/RemoveUserAreaData" />
        
    </RadioGroup>

</LinearLayout>